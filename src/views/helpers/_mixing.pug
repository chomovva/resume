	Набор миксинов



mixin preloader( args )
	div( class="preloader", id=args.id, style=args.style )
		.bar.bar--1
		.bar.bar--2
		.bar.bar--3
		.bar.bar--4
		.bar.bar--5
		.bar.bar--6
		.bar.bar--7
		.bar.bar--8



mixin progress( percent )
	.progress
		.progress-bar( role="progressbar", style="width: " + percent + "%", aria-valuenow=percent, aria-valuemin="0", aria-valuemax="100" )



mixin entry( args )
	div( class=args.class+" entry" ): .row.center-xs
		.col-xs-8.col-sm-4.col-md-4.col-lg-3
			a.thumbnail( href="#" )
				img.lazy.wp-post-thumbnail( src="#", data-src=args.thumbnail, alt=args.title )
				.publish #[span.day 20] #[span.month окт] #[span.year 2019]
		.col-xs-12.col-sm-8.col-md-8.col-lg-9
			h3.title: a( href="#" ) #{args.title}
			ul.categories
				li: a( href="#" ) тема
				li: a( href="#" ) плагин
				li: a( href="#" ) вёрстка
			p.excerpt Lorem ipsum dolor sit amet, consectetur adipisicing elit. Tenetur nam, omnis perspiciatis reprehenderit temporibus sint porro libero? Id aut nam animi eveniet perferendis repudiandae aperiam, mollitia expedita officia consectetur laboriosam.
			.row.center-xs.middle-xs
				.col-xs-6: include ../blocks/_share
				.col-xs-6: a.permalink( href="#" ) Подробней



mixin portfolio_entry( args )
	a.portfolio__entry.entry( href="#" )
		svg.bg( viewBox="0 0 600 400" ).
			<rect style="fill:#8686bf;fill-opacity:1;stroke-width:0.26458332;opacity:0.25" width="600" height="400" x="0" y="0" />
		if ( 'lazy' == args.lazyAttr ) 
			img.wp-post-thumbnail( src="#", data-lazy=args.thumbnail, alt=args.title )
		else
			img.wp-post-thumbnail.lazy( src="#", data-src=args.thumbnail, alt=args.title )
		.overlay
			h3.title #{args.title}
			ul.categories
				li #{args.category}
				li #{args.category}
			p.excerpt Lorem ipsum dolor sit amet, consectetur adipisicing elit. Laboriosam reprehenderit, tenetur libero quae maiores recusandae. Deserunt excepturi nemo aliquam repudiandae nulla explicabo assumenda minus earum animi. Impedit id, maiores fuga.



mixin widget( args )
	.widget
		h3.widget__title.title #{args.title}
		block