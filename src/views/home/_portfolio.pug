	.slider
		#portfolio-items
			+portfolio_entry( { lazyAttr: 'lazy', title: 'Абитуриент', category: 'Плагины', thumbnail: src.img+'portfolio/01.jpg' } )
			+portfolio_entry( { lazyAttr: 'lazy', title: 'Абитуриент', category: 'Темы', thumbnail: src.img+'portfolio/02.jpg' } )
