			+portfolio_entry( { lazyAttr: 'lazy', title: 'Контакты', category: 'Плагин', thumbnail: src.img+'portfolio/04.jpg' } )
			+portfolio_entry( { lazyAttr: 'lazy', title: 'DumDJ', category: 'Вёрстка', thumbnail: src.img+'portfolio/05.jpg' } )
		.controls
			button.slider-arrow.arrow-prev#portfolio-slider-prev: span.sr-only Предыдущий слайд
			button.slider-arrow.arrow-next#portfolio-slider-next: span.sr-only Следующий слайд
			a.morelink( href="#" ) Смотреть все
			+preloader( { id: 'portfolio-preloader', style: 'display: none;' } )